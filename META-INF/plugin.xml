<idea-plugin version="2">
  <id>org.ivan.intellij.static.import.action</id>
  <name>Static import action</name>
  <version>1.0</version>

  <description>
    This plugin allow you to import members statically as action. Shortcut can be bound.
  </description>

  <idea-version since-build="131"/>

  <extensions defaultExtensionNs="com.intellij">
  </extensions>

  <actions>
    <action id="StaticImportAction" class="org.ivan.intellij.staticimport.StaticImportAction"
            text="Static import"
            description="Static import">
      <add-to-group group-id="EditorActions" anchor="last"/>
      <keyboard-shortcut keymap="$default" first-keystroke="control shift S"/>
      <keyboard-shortcut keymap="Mac OS X" first-keystroke="control shift S"/>
      <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="control shift S"/>
    </action>
  </actions>

</idea-plugin>